<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arduino_base_gray"
    tools:context="com.google.android.apps.forscience.whistlepunk.accounts.OnboardingActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/onboarding_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/onboarding_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/arduino_white"
        app:layout_constraintBottom_toBottomOf="@id/onboarding_title_1_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/onboarding_title_1_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboarding_title_1_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        app:layout_constraintEnd_toStartOf="@id/onboarding_guideline_end"
        app:layout_constraintStart_toEndOf="@id/onboarding_guideline_start"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/onboarding_guideline_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/onboarding_title_1"
            style="@style/OnboardingText.Title.Tablet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:gravity="end|center_vertical"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_07_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/onboarding_guideline_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_text_1"
            style="@style/OnboardingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:gravity="start|center_vertical"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_07_text_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/onboarding_guideline_40"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/onboarding_figure_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/onboarding_page_7_figure_1_tablet_landscape"
        android:translationY="-245dp"
        app:layout_constraintStart_toStartOf="@id/onboarding_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title_1_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboarding_container_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="34dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/onboarding_guideline_end"
        app:layout_constraintStart_toEndOf="@id/onboarding_figure_1"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title_1_container">

        <ImageView
            android:id="@+id/onboarding_figure_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/onboarding_page_6_figure_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_text_2"
            style="@style/OnboardingText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_06_text_03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/onboarding_figure_2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/onboarding_figure_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/onboarding_page_6_figure_1_tablet_landscape"
            android:translationX="-2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onboarding_figure_2" />

        <TextView
            android:id="@+id/onboarding_text_3"
            style="@style/OnboardingText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_06_text_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/onboarding_figure_2"
            app:layout_constraintTop_toTopOf="@id/onboarding_figure_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboarding_title_2_container"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/onboarding_guideline_end"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/onboarding_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/onboarding_container_2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/onboarding_guideline_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <TextView
            android:id="@+id/onboarding_text_4"
            style="@style/OnboardingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:gravity="end|center_vertical"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_06_text_01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/onboarding_guideline_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_title_2"
            style="@style/OnboardingText.Title.Tablet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:gravity="start|center_vertical"
            android:lineSpacingExtra="0dp"
            android:text="@string/onboarding_06_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/onboarding_guideline_60"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/onboarding_finish_button"
        style="@style/OnboardingButton.Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:text="@string/onboarding_finish_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/onboarding_guideline_end"
        app:layout_constraintStart_toStartOf="@id/onboarding_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title_2_container"
        app:layout_constraintVertical_bias="1"
        app:layout_goneMarginTop="28dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
